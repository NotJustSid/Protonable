{
  "name": "protonable",
  "productName": "Protonable",
  "version": "0.0.1-alpha",
  "description": "A Minimal Text Editor Built on Electron!",
  "repository": "https://github.com/Sid200/Protonable",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.techisunique.protonable",
    "win": {
      "target": "nsis",
      "icon": "img/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE",
      "createDesktopShortcut": false,
      "installerSidebar": "img/sidebar_setup.bmp",
      "uninstallerSidebar": "img/sidebar_setup_u.bmp",
      "deleteAppDataOnUninstall": true
    }
  },
  "author": "Siddhanth Bhowmick",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.5.0",
    "codemirror-colorpicker": "^1.9.48",
    "electron-log": "^2.2.17",
    "electron-updater": "^4.0.6",
    "font-list": "^1.1.0",
    "mousetrap": "^1.6.2",
    "os": "^0.1.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "electron": "^3.0.7",
    "electron-builder": "^20.38.4"
  }
}
