{
  "name": "protonable",
  "version": "1.0.0",
  "description": "A Minimal Text Editor Built on Electron!",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "dist": "build"
  },
  "build": {
    "appId": "com.techisunique.protonable",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "img/icon.ico"
    }
  },
  "author": "Siddhanth Bhowmick",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.5.0",
    "codemirror-colorpicker": "^1.9.48",
    "electron-packager": "^13.0.1",
    "font-list": "^1.1.0",
    "mousetrap": "^1.6.2",
    "os": "^0.1.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "electron-builder": "^20.36.2",
    "electron": "^3.0.7"
  }
}
